        = title
      = ' - '
      = APP_NAME
    link(href='https://fonts.googleapis.com/css?family=Roboto|Droid+Slab' rel='stylesheet')
    link(href='/frontend.css'  rel='stylesheet' type='text/css')
  body

    nav.navbar.navbar-light
      .container
        a.navbar-brand(href='/')
          = APP_NAME

    block page
      .container.pt-2
        block content

    footer.container.mt-3
      p.text-muted.float-right
        small
          | &copy; 2017
          = ' '
          = APP_NAME

    script(src='/frontend.js')

